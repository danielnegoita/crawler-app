{
	"name": "wp-media-recruitment/php-assessment-template",
	"description": "Template for our PHP assessment",
	"homepage": "https://github.com/wp-media-recruitment/php-assessment-template",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "WP Media",
			"email": "contact@wp-media.me",
			"homepage": "https://wp-media.me"
		}
	],
	"type": "library",
	"config": {
		"sort-packages": true
	},
	"support": {
		"issues": "https://github.com/wp-media-recruitment/php-assessment-template/issues",
		"source": "https://github.com/wp-media-recruitment/php-assessment-template"
	},
	"require-dev": {
		"php": ">=7",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"phpcompatibility/phpcompatibility-wp": "^2",
		"phpunit/phpunit": "^9.5",
		"wp-coding-standards/wpcs": "^2",
		"yoast/wp-test-utils": "^0.2"
	},
	"autoload": {
		"psr-4": {
            "Crawler\\": "src/Crawler",
			"App\\": "src/App"
        }
	},
	"autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {},
	"require": {
		"dbrekelmans/bdi": "^1.0",
		"doctrine/annotations": "^1.13",
		"league/flysystem": "^3.0",
		"symfony/config": "^6.0",
		"symfony/dependency-injection": "^6.0",
		"symfony/framework-bundle": "^6.0",
		"symfony/http-foundation": "^6.0",
		"symfony/http-kernel": "^6.0",
		"symfony/panther": "^2.0",
		"symfony/routing": "^6.0",
		"symfony/twig-bundle": "^6.0",
		"symfony/web-profiler-bundle": "^6.0",
		"symfony/yaml": "^6.0",
		"tightenco/collect": "^8.79",
		"twig/twig": "^3.3"
	}
}
